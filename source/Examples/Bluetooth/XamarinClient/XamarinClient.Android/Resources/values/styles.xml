<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">
    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->

    <item name="android:windowNoTitle">true</item>

    <!-- Set theme colors from https://aka.ms/material-colors -->
     <!--colorPrimary is used for the default action bar background--> 
    <item name="colorPrimary">@color/colorPrimary</item>
     <!--colorPrimaryDark is used for the status bar--> 
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
     <!--colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets--> 
    <item name="colorAccent">@color/colorAccent</item>

    <item name="android:colorPressedHighlight">@color/colorSelected</item>
    <item name="android:colorLongPressedHighlight">@color/colorSelected</item>
    <item name="android:colorFocusedHighlight">@color/colorSelected</item>
    <item name="android:colorActivatedHighlight">@color/colorSelected</item>
    <item name="android:activatedBackgroundIndicator">@color/colorSelected</item>
  </style>
</resources>