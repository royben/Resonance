<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style type="text/css">

        body {
            margin: 0;
            padding: 0;
            color: #606060;
        }

        #title {
            background-color: #673AB7;
            color: white;
            padding: 50px;
            margin: 0;
        }

        * {
            font-family: 'Roboto';
        }

    </style>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.24/datatables.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/signalr@2.4.1/jquery.signalR.min.js"></script>

</head>
<body>
    <div>
        <h1 id="title">Resonance SignalR Server</h1>
    </div>
    <div id="tableContainer">
        <table id="logsTable" class="display" style="width:100%">
            <thead>
                <tr>
                    <th width="100">Level</th>
                    <th width="150">Time</th>
                    <th width="150">Source Context</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @* Logs Table *@
            </tbody>
        </table>
    </div>

    <script type="text/javascript">
        var table = $('#logsTable').DataTable(
            {
                "scrollY": "500px",
                "scrollCollapse": true,
                "paging": false
            }
        );



        var connection = $.hubConnection();
        var contosoChatHubProxy = connection.createHubProxy('LoggingHub');

        contosoChatHubProxy.on('LogReceived', function (logItem) {
            console.log(logItem);

            table.row.add([
                logItem.Level,
                logItem.Time,
                logItem.SourceContext,
                logItem.Message,
            ]).draw(false);

            $('.dataTables_scrollBody').scrollTop($('.dataTables_scrollBody')[0].scrollHeight);
        });

        connection.start().done(function () {
            // Wire up Send button to call NewContosoChatMessage on the server.
            console.log("SignalR Started!");
        });
    </script>
</body>
</html>
